package com.step03;

import java.io.*;
import java.net.*;

public class Server {

	public static void main(String[] args) {
		ServerSocket serve = null;
		
		
		try {
			//다중 사용자를 받기위한 무한 루프
			serve = new ServerSocket(8080);
			while(true) {
				//accept는 계속 실행하면서 다중 사용자를 받을 수 있는 sock이 있어야함.
				Socket sock = serve.accept();
				InputStream is = null;
			}
			
		} catch (IOException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
	}
}
