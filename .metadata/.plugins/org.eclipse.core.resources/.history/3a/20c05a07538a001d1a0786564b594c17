package com.bit;

import java.io.File;
import java.io.FileWriter;
import java.io.IOException;
import java.io.Writer;

public class Ex05 {
	
	public static void main(String[] args) {
		File f = new File("test04.txt");
		Writer fw = null;
		try {
			fw = new FileWriter(f);
			
			fw.write("문자열을 버퍼를 이용해 작성할 예정입니다.");
			
			
			
			if(fw!=null)fw.close();
		} catch (IOException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
		
	}
}
