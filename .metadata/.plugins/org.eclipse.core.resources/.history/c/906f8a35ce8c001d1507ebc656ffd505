package com.test;

import java.awt.BorderLayout;
import java.awt.Button;
import java.awt.Dimension;
import java.awt.FlowLayout;
import java.awt.Frame;
import java.awt.GridLayout;
import java.awt.Label;
import java.awt.Panel;
import java.awt.TextField;
import java.awt.event.WindowAdapter;
import java.awt.event.WindowEvent;

import javax.swing.JLabel;

public class LoginForm extends Frame{

	public LoginForm() {
		addWindowListener(new WindowAdapter() {
			@Override
			public void windowClosing(WindowEvent e) {
				// TODO Auto-generated method stub
//				if(!change)dispose();
				dispose();
			}
		});
		setTitle("로그인");
		setLayout(new BorderLayout());
		
		//north
		Panel northP = new Panel();
		JLabel northL = new JLabel("이미지 들어갈 예정");
		northP.add(northL);
		
		//center
		Panel centerP = new Panel();
		centerP.setLayout(new FlowLayout());
		
		Panel idP = new Panel();
		Label idL = new Label("ID   :");
		TextField idTf = new TextField(30);
		
		Panel pwP = new Panel();
		Label pwL = new Label("PW :");
		TextField pwTf = new TextField(30);
		
		idP.add(idL);
		idP.add(idTf);
		pwP.add(pwL);
		pwP.add(pwTf);
		
		centerP.add(idP);
		centerP.add(pwP);
		
		
		//east
		Panel eastP = new Panel();
		Dimension di = new Dimension();
		di.width = 100;
		di.height = 60;
		Button loginBtn = new Button("LOGIN");
		loginBtn.setPreferredSize(di);
		
		eastP.add(loginBtn);
		
		//south
		Panel southP = new Panel();
		JLabel joinL = new JLabel();
		joinL.setText("회원가입");
		southP.add(joinL);
		
		
		
		add(northP,BorderLayout.NORTH);
		add(centerP,BorderLayout.CENTER);
		add(eastP,BorderLayout.EAST);
		add(southP,BorderLayout.SOUTH);
		
		setBounds(700, 300, 500, 200);
		setVisible(true);
	}

}
